@{
    string? data = null;
    if (TempData["Success"] != null){
        data = TempData["Success"].ToString();
        Console.WriteLine(data);

    }
}
@section style{
    <style>
        .searchBar {
            width: 100%;
            display: flex;
            justify-content: center;
            flex-direction: row;
            align-items: center;
            margin-right: auto;
        }

        #searchQueryInput {
            width: 60%;
            height: 6vh;
            background: #f5f5f5;
            outline: none;
            border: none;
            border-radius: 1.625rem;
            padding: 0 3.5rem 0 1.5rem;
            font-size: 2rem;
        }

        #searchQuerySubmit {
            width: 3.5rem;
            height: 2.8rem;
            margin-left: -3.5rem;
            background: none;
            border: none;
            outline: none;
        }

            #searchQuerySubmit:hover {
                cursor: pointer;
            }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            color: red;
            z-index: 1;
        }

        video {
            position: absolute;
            top: 0;
            left: 0;
            display: inline-block;
            width: 300px;
            z-index: -1;
        }

        .container-vid {
            width: 20vw;
            height: 20vw;
            margin-bottom: 50px; /* Adjust the margin-bottom value as needed to create space between the text and the button */
        }

        #successIndicator{
            position:fixed;
            top:16%;
            right:10%;
      
        }
    </style>
}

    <div class="container-fluid d-flex align-items-center">
        <div class="searchBar">

            <input id="searchQueryInput" type="text" name="searchQueryInput" placeholder="Search" value="" />
            <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
                <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                    <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
            </button>
        </div>
    </div>
    <div class="text-center">

        <div class="d-flex justify-content-center align-items-center position-relative container-vid">
            <div>
                <video id="video" autoplay></video>

                <h1 class="overlay">test</h1>
            </div>
        </div>
        <button class="button" data-record="false">Test Audio Play</button>

        <p class="testing"></p>

    </div>


    <div class="toast" id="successIndicator" role="alert" aria-live="assertive" aria-atomic="true" data-bs-animation="true">
        <div class="toast-header">
            <i class="fa fa-money rounded me-2"></i>
            <strong class="me-auto">Congrats</strong>
            <small>a few seconds ago</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Payment is Successful
        </div>
    </div>


@section Scripts{
    <script type="module" src="~/js/recog.js"></script>
    <script src="~/js/audio.js"></script>
    <script>
        var dataValue = @Json.Serialize(data);
        console.log(dataValue);
        if (dataValue == "true"){
            $("#successIndicator").show();
            setTimeout(()=>{
                $("#successIndicator").fadeOut();

            },2000)
        }
    </script>
}
