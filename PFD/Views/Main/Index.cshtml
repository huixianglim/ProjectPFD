@{
    string GetInitials(string fullName)
    {
        string[] words = fullName.Split(new char[] { ' ' }, StringSplitOptions.RemoveEmptyEntries);
        string initials = "";

        foreach (string word in words)
        {
            initials += word[0];
        }

        return initials.ToUpper(); // Convert initials to uppercase if needed
    }
}

