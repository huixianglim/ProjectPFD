        <script type="module" src="~/js/recog.js" asp-append-version="true"></script>
        <script src="~/js/audio.js" asp-append-version="true"></script>
        <script asp-append-version="true">
            var dataValue = @Json.Serialize(data);
            var completed = @Json.Serialize(complete);
            console.log(dataValue);
            if (dataValue == "true") {
                $("#successIndicator").show();
                setTimeout(() => {
                    $("#successIndicator").fadeOut();

                }, 2000)
            }

            if (completed == "true") {
                var button = document.querySelector("#tutorial");
                button.setAttribute('style', 'display:none !important');
            }

            $("#end-slideshow").on('click',()=>{
               var button =  document.querySelector("#tutorial");
               button.setAttribute('style', 'display:none !important');
               $("completeForm").submit();

            })
        </script>
    }
