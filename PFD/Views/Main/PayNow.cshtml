@model IEnumerable<PFD.Models.Contacts>
@section style{

    <style>
        p{
            font-family: 'Roboto', sans-serif;
        }
        .searchBar {
            width: 100%;
            display: flex;
            justify-content: flex-end   ;
            flex-direction: row;
            align-items: center;
            margin-right: auto;
            padding-left:1rem;
        }

        #searchQueryInput {
            width: 60%;
            height: 6vh;
            background: #f5f5f5;
            outline: none;
            border: none;
            border-radius: 1.625rem;
            padding: 0 3.5rem 0 1.5rem;
            font-size: 2rem;
   
        }

        #searchQuerySubmit {
            width: 3.5rem;
            height: 2.8rem;
            margin-left: -3.5rem;
            background: none;
            border: none;
            outline: none;
        }

            #searchQuerySubmit:hover {
                cursor: pointer;
            }

        .overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            color: black;
            background-color: white;
            padding: 5px 20px;
            z-index: 1;
            font-size: 1rem;
            font-weight: 700;
        }

        video {
            /*        position: fixed;
                            top: 0;
                            left: 0;*/
            display: inline-block;
            width: 300px;
            z-index: -1;
        }

        .video-placeholder {
            display: inline-block;
            width: 300px;
            height: 225px;
            background-color: #fff;
        }

        .container-vid {
            position: fixed;
            padding-left: 0;
            top: 100px;
            left: 0;
            margin-bottom: 50px; /* Adjust the margin-bottom value as needed to create space between the text and the button */
            z-index: 2;
            width: 300px;
            height: 225px;
        }

        .container-vid2 {
            position: fixed;
            padding-left: 0;
            top: 100px;
            left: 0;
            margin-bottom: 50px; /* Adjust the margin-bottom value as needed to create space between the text and the button */
            z-index: 1;
        }

        .placeholder-text {
            margin: 0;
            line-height: 225px;
            font-size: 1rem;
            font-weight: 700;
            color: #131313;
        }

        .icon {
            width: 50px; /* Set the width and height to the desired value */
            height: 50px; /* Set the width and height to the desired value */
            border-radius: 50%; /* Use border-radius property to create a circular shape */
            background-color: #007bff; /* Set the background color of the circular icon */
            color: #ffffff; /* Set the text color */
            text-align: center; /* Center the text inside the circular icon */
            line-height: 50px; /* Center the text vertically inside the circular icon */
            background-color: #0F387D;
        }

  

        a.contacts{
            text-decoration: none;
            min-height:20vh;
            border-radius:1.65rem;
            padding:1rem;

        }

        a.contacts:hover{
            background-color:grey;
                color: black;
                transform:scale(1.03);
        }
   

        .contacts{
            color:black;
        }
        
        a.contacts:hover{
            background-color: #EDEDED;
        }

        .button{
            background-color: black;
            border-radius: 20%;
            z-index: 100000;
            position: fixed;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            bottom: 10%;
            right: 5%;
            width: 90px;
            height: 90px;
            transition: all 0.2s ease-out;
            color:white;
        }

        .button:hover{
            cursor:pointer;
        }
        .button > i {
            color:inherit;
            font-size:2.3vw;
        }

        .button.active{

            transform:scale(1.05);
            color:greenyellow;

        }
      
        .contact-name{
            font-family: 'Roboto', sans-serif;
        }
  
    </style>
}

    <div class="container-fluid d-flex align-items-center">
    </div>
    <div class="text-center">

        <div class="d-flex justify-content-center justify-content-center container-fluid mb-5">
            <div class="container-vid">
                <video id="video" autoplay data-type="home"></video>

                <p class="overlay"></p>
            </div>

            <div class="container-vid2">
                <div class="video-placeholder d-flex align-content-center justify-content-center">
                    <p class="placeholder-text d-flex align-content-center justify-content-center"></p>
                </div>

            </div>
            <div class="searchBar">

                <input id="searchQueryInput" type="text" name="searchQueryInput" placeholder="Search" value="" />
                <button id="searchQuerySubmit" type="submit" name="searchQuerySubmit">
                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                        <path fill="#666666" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                    </svg>
                </button>
            </div>
        </div>

        <div class="button" data-type = "search">
            <i class="fa fa-microphone"></i>
        </div>

        <p class="testing">
        </p>

    </div>


    <partial name="~/Views/Main/_ContactList.cshtml"></partial>




@section Scripts{
    <script type="module" src="~/js/recog.js" asp-append-version="true"></script>
    <script src="~/js/audio.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

}
