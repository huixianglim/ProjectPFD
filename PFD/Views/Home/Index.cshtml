@section style{


<style>
    
 
  

    body {
        background: #fff;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 14px;
        color: #fff;
        margin: 0;
        padding: 0;
            
    }

    .swiper-container {
        width: 100%;
        height: 100%;
        margin-left: auto;
        margin-right: auto;
        overflow:hidden;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

    .swiper-pagination-bullet-active {
        background-color: #fff;
    }

    .color-1 {
        background: url("../images/ocbc-banner-7.png");
        background-size:cover;
        background-position: center;
        background-repeat:no-repeat;
    }

    .color-2 {
            background: url("../images/ocbc-banner-9.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
    }

    .color-3 {
            background: url("../images/ocbc-banner-3.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
    }

    .color-4 {
            background: url("../images/ocbc-banner-5.png");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
    }

    .color-5 {
        background-color: #607D8B;
    }

    .about-container {
        width: 100%;
        padding-left: 70px;
        padding-right: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 85px;
        padding-bottom: 85px;
        background: #f8f8f8;
    }

    .about-img-container {
        height: 50vh;
        background: url("../images/ocbc_img1.png");
        background-position: right center;
        background-repeat: no-repeat;
        background-size:cover;
    }

    .reveal {
        position: relative;
        transform: translateX(150px);
        opacity: 0;
        transition: all 1s ease;
    }

        .reveal.active {
            transform: translateX(0px);
            opacity: 1;
        }

    #start.reveal {
        position: relative;
        transform: translateY(-150px);
        opacity: 0;
        transition: all 1s ease;
    }

        #start.reveal.active {
            transform: translateY(0px);
            opacity: 1;
        }

    /*--------------------------------------------------------------
    # Stats Counter Section
    --------------------------------------------------------------*/
    .stats-counter {
        padding: 40px 0;
    }

        .stats-counter .stats-item {
            padding: 20px 0;
            border-bottom: 1px solid #e4e4e4;
        }

            .stats-counter .stats-item .purecounter {
                min-width: 90px;
                padding-right: 15px;
            }

            .stats-counter .stats-item i {
                font-size: 44px;
                line-height: 0;
                margin-right: 15px;
            }

            .stats-counter .stats-item span {
                font-size: 40px;
                display: block;
                font-weight: 700;
                color: var(--color-primary);
                line-height: 40px;
            }

            .stats-counter .stats-item p {
                margin: 0;
                font-family: var(--font-primary);
                font-size: 14px;
            }

    /*--------------------------------------------------------------
    # Frequently Asked Questions Section
    --------------------------------------------------------------*/
    .faq .content h3 {
        font-weight: 400;
        font-size: 34px;
    }

    .faq .content h4 {
        font-size: 20px;
        font-weight: 700;
        margin-top: 5px;
    }

    .faq .content p {
        font-size: 15px;
        color: #6c757d;
    }

    .faq .accordion-item {
        border: 0;
        margin-bottom: 20px;
        box-shadow: 0px 5px 25px 0px rgba(0, 0, 0, 0.06);
        border-radius: 10px;
    }

        .faq .accordion-item:last-child {
            margin-bottom: 0;
        }

    .faq .accordion-collapse {
        border: 0;
    }

    .faq .accordion-button {
        padding: 20px 50px 20px 20px;
        font-weight: 600;
        border: 0;
        font-size: 18px;
        line-height: 24px;
        color: var(--color-default);
        text-align: left;
        background: #fff;
        box-shadow: none;
        border-radius: 10px;
    }

        .faq .accordion-button .num {
            padding-right: 10px;
            font-size: 20px;
            line-height: 0;
            color: var(--color-primary);
        }

        .faq .accordion-button:not(.collapsed) {
            color: var(--color-primary);
            border-bottom: 0;
            box-shadow: none;
        }

        .faq .accordion-button:after {
            position: absolute;
            right: 20px;
            top: 20px;
        }

    .faq .accordion-body {
        padding: 0 40px 30px 45px;
        border: 0;
        border-radius: 10px;
        background: #fff;
        box-shadow: none;
    }


    
</style>
}
