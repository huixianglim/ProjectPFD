    <!-- Profile Picture and Update Email Form inside Popup -->
<div class="justify-content-center" id="email_container">

    <div id="popup" class="popup email">
        <button type="button" class="btn-close" aria-label="Close" onclick="hidePopup()"></button>
    <div id="profilepic">
        <img src="/Images/profile-pic.jpg" alt="Profile Picture">
        <p class="text-center">@AccountObject.Name</p>
    
    </div>


                <!-- Update Email Form -->
                <form id="email_update">
                    <label for="currentEmail">Current Email:</label>
                    <input type="email" id="currentEmail" name="currentEmail" readonly>

                    <label for="newEmail">New Email:</label>
                    <input type="email" id="newEmail" name="newEmail" required>

                    <label for="confirmEmail">Confirm Email:</label>
                    <input type="email" id="confirmEmail" name="confirmEmail" required>

                    <button type="submit">Update Email</button>
                </form>
            </div>
    </div>



    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL }, 'google_translate_element');
        }
    </script>

    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <script>
        // JavaScript functions to show and hide the pop-up
        function showPopup() {
        document.getElementById('email_container').style.display = 'flex';
        }

        function hidePopup() {
        document.getElementById('email_container').style.display = 'none';
        }
    </script>